---
interface BreadcrumbItem {
  name: string;
  url?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
const siteUrl = "https://pythiainsights.com";

// Build schema.org BreadcrumbList
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    ...(item.url && { "item": item.url.startsWith("http") ? item.url : `${siteUrl}${item.url}` })
  }))
};
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    {items.map((item, index) => (
      <li>
        {item.url ? (
          <a href={item.url}>{item.name}</a>
        ) : (
          <span aria-current="page">{item.name}</span>
        )}
        {index < items.length - 1 && <span class="separator">/</span>}
      </li>
    ))}
  </ol>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

<style>
  .breadcrumbs {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    margin-bottom: 1.5rem;
  }

  .breadcrumbs ol {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumbs a {
    color: var(--text-muted);
    transition: color 0.2s;
  }

  .breadcrumbs a:hover {
    color: var(--accent);
  }

  .breadcrumbs span[aria-current="page"] {
    color: var(--text);
    font-weight: 500;
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .separator {
    color: var(--text-dim);
    font-weight: 300;
  }

  @media (max-width: 768px) {
    .breadcrumbs span[aria-current="page"] {
      max-width: 180px;
    }
  }
</style>
