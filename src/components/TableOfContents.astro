---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
  maxDepth?: number;
}

const { headings, maxDepth = 3 } = Astro.props;

// Filter headings to only include H2 and H3 (skip H1 which is the title)
const filteredHeadings = headings.filter(h => h.depth >= 2 && h.depth <= maxDepth);
---

{filteredHeadings.length > 0 && (
  <nav class="toc" aria-label="Table of contents">
    <div class="toc-header">
      <span class="toc-icon">☰</span>
      <span class="toc-title">In This Guide</span>
    </div>
    <ol class="toc-list">
      {filteredHeadings.map((heading) => (
        <li class={`toc-item toc-depth-${heading.depth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))}
    </ol>
  </nav>
)}

<style>
  .toc {
    background: var(--bg-elevated, #12121a);
    border: 1px solid var(--border, #1e1e2a);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 2rem 0 3rem;
  }
  
  .toc-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border, #1e1e2a);
  }
  
  .toc-icon {
    color: var(--accent, #00e5a0);
    font-size: 1rem;
  }
  
  .toc-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent, #00e5a0);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }
  
  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
    counter-reset: toc-counter;
  }
  
  .toc-item {
    margin: 0;
    padding: 0;
  }
  
  .toc-depth-2 {
    counter-increment: toc-counter;
  }
  
  .toc-depth-2 > a::before {
    content: counter(toc-counter) ". ";
    color: var(--text-dim, #4a4a5a);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85em;
  }
  
  .toc-depth-3 {
    padding-left: 1.25rem;
  }
  
  .toc-depth-3 > a::before {
    content: "→ ";
    color: var(--text-dim, #4a4a5a);
    font-size: 0.85em;
  }
  
  .toc-item a {
    display: block;
    padding: 0.4rem 0;
    color: var(--text-muted, #7a7a8a);
    font-size: 0.9rem;
    text-decoration: none;
    transition: color 0.2s ease, padding-left 0.2s ease;
    line-height: 1.4;
  }
  
  .toc-item a:hover {
    color: var(--accent, #00e5a0);
    padding-left: 4px;
  }
  
  /* Compact on mobile */
  @media (max-width: 768px) {
    .toc {
      padding: 1.25rem;
      margin: 1.5rem 0 2rem;
    }
    
    .toc-item a {
      font-size: 0.85rem;
      padding: 0.35rem 0;
    }
  }
</style>
