---
import Layout from './Layout.astro';
import { formatReadingTime } from '../utils/readingTime';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate?: Date;
    author?: string;
    tags?: string[];
    image?: string;
  };
  readingTime?: number;
}

const { frontmatter, readingTime } = Astro.props;
const { title, description, pubDate, author = "Eric", tags = [], image } = frontmatter;

const formattedDate = pubDate ? new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(pubDate) : null;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Person",
    "name": author
  },
  "datePublished": pubDate?.toISOString(),
  "publisher": {
    "@type": "Organization",
    "name": "Pythia Insights"
  }
};
---

<Layout 
  title={title}
  description={description}
  ogType="article"
  ogImage={image}
  schema={schema}
  article={{
    publishedTime: pubDate?.toISOString(),
    author: author,
    tags: tags
  }}
>

<article class="blog-article">
  <div class="hero-grid-bg"></div>
  
  <header class="article-header">
    <div class="article-meta">
      <a href="/blog" class="back-link">‚Üê Blog</a>
      {formattedDate && <time datetime={pubDate?.toISOString()}>{formattedDate}</time>}
      {readingTime && <span class="reading-time">{formatReadingTime(readingTime)}</span>}
    </div>
    <h1>{title}</h1>
    {description && <p class="article-desc">{description}</p>}
    {tags.length > 0 && (
      <div class="article-tags">
        {tags.map(tag => <span class="tag">{tag}</span>)}
      </div>
    )}
  </header>

  <div class="article-content">
    <slot />
  </div>

  <footer class="article-footer">
    <div class="author-info">
      <div class="author-avatar">E</div>
      <div>
        <div class="author-name">{author}</div>
        <div class="author-role">Pythia Insights</div>
      </div>
    </div>
    <a href="/contact" class="btn-primary">Work Together</a>
  </footer>
</article>

</Layout>

<style>
  .blog-article {
    position: relative;
    padding-top: 8rem;
  }

  .hero-grid-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 400px;
    background-image:
      linear-gradient(rgba(30, 30, 42, 0.3) 1px, transparent 1px),
      linear-gradient(90deg, rgba(30, 30, 42, 0.3) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: linear-gradient(to bottom, black 0%, transparent 100%);
  }

  .article-header {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 1.5rem 3rem;
    position: relative;
    z-index: 2;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-dim);
  }

  .back-link {
    color: var(--accent);
    transition: opacity 0.3s;
  }

  .back-link:hover {
    opacity: 0.8;
  }

  .reading-time {
    color: var(--text-muted);
  }

  .article-header h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .article-desc {
    font-size: 1.2rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    padding: 0.35rem 0.7rem;
    background: var(--accent-dim);
    border: 1px solid rgba(0, 229, 160, 0.15);
    border-radius: 4px;
    color: var(--accent);
    letter-spacing: 0.02em;
  }

  .article-content {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem;
  }

  /* Prose styles */
  .article-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 2.5rem 0 1rem;
    letter-spacing: -0.01em;
  }

  .article-content :global(h3) {
    font-size: 1.35rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem;
  }

  .article-content :global(p) {
    color: var(--text-muted);
    font-size: 1.05rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .article-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .article-content :global(a:hover) {
    opacity: 0.8;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--text-muted);
  }

  .article-content :global(li) {
    font-size: 1.05rem;
    line-height: 1.8;
    margin-bottom: 0.5rem;
  }

  .article-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-muted);
  }

  .article-content :global(pre) {
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
  }

  .article-content :global(:not(pre) > code) {
    background: var(--bg-elevated);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .article-content :global(img) {
    max-width: 100%;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .article-content :global(hr) {
    border: none;
    height: 1px;
    background: var(--border);
    margin: 3rem 0;
  }

  .article-footer {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    border-top: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: var(--accent-dim);
    border: 2px solid var(--accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 600;
    color: var(--accent);
  }

  .author-name {
    font-weight: 600;
  }

  .author-role {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .blog-article { padding-top: 6rem; }
    .article-footer { justify-content: center; text-align: center; }
    .author-info { flex-direction: column; }
  }
</style>
