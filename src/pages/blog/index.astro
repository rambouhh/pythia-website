---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date, newest first
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout 
  title="Blog" 
  description="Insights on financial strategy, bookkeeping, and growing your business from the Pythia Insights team."
>
  <section class="blog-listing">
    <div class="container">
      <header class="blog-listing-header">
        <h1>Blog</h1>
        <p class="subtitle">Insights on financial strategy, bookkeeping, and business growth</p>
      </header>
      
      <div class="posts-grid">
        {sortedPosts.map((post) => (
          <article class="post-card">
            <div class="post-content">
              {post.data.category && (
                <span class="post-category">{post.data.category}</span>
              )}
              <h2>
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h2>
              <p class="post-excerpt">{post.data.description}</p>
              <div class="post-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </time>
              </div>
              <a href={`/blog/${post.slug}`} class="read-more">Read more â†’</a>
            </div>
          </article>
        ))}
      </div>
      
      {sortedPosts.length === 0 && (
        <div class="no-posts">
          <p>No blog posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .blog-listing {
    padding: 140px 0 80px;
  }

  .blog-listing-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .blog-listing-header h1 {
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .subtitle {
    color: var(--text-light);
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .posts-grid {
    display: grid;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .post-card {
    background: var(--bg);
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--accent);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .post-category {
    display: inline-block;
    color: var(--accent);
    font-weight: 600;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.75rem;
  }

  .post-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-card h2 a {
    color: var(--primary);
    transition: color 0.2s;
  }

  .post-card h2 a:hover {
    color: var(--accent);
  }

  .post-excerpt {
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .post-meta {
    color: var(--text-light);
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .read-more {
    color: var(--primary);
    font-weight: 600;
    transition: color 0.2s;
  }

  .read-more:hover {
    color: var(--accent);
  }

  .no-posts {
    text-align: center;
    padding: 4rem 0;
    color: var(--text-light);
  }

  @media (max-width: 768px) {
    .blog-listing {
      padding: 120px 0 60px;
    }

    .post-card {
      padding: 1.5rem;
    }

    .post-card h2 {
      font-size: 1.25rem;
    }
  }
</style>
