---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { calculateReadingTime, formatReadingTime } from '../../utils/readingTime';

const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date, newest first, and add reading time
const sortedPosts = await Promise.all(
  posts
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .map(async (post) => {
      const { remarkPluginFrontmatter } = await post.render();
      const readingTime = calculateReadingTime(post.body || '');
      return { ...post, readingTime };
    })
);
---

<Layout 
  title="Blog" 
  description="Insights on code-native finance, financial modeling, and building analytical infrastructure."
>

<section class="hero-mini">
  <div class="hero-grid-bg"></div>
  <div class="hero-content reveal">
    <div class="hero-tag">// BLOG</div>
    <h1>Thoughts on <span class="accent">finance</span><br>and <span class="accent">code.</span></h1>
    <p class="hero-desc">
      Insights on code-native finance, financial modeling, and building 
      analytical infrastructure that actually works.
    </p>
    <a href="/rss.xml" class="rss-link" title="Subscribe via RSS">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
        <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
      </svg>
      RSS Feed
    </a>
  </div>
</section>

<div class="section-divider"></div>

<section class="section">
  <div class="posts-grid reveal">
    {sortedPosts.map((post) => (
      <article class="post-card">
        <div class="post-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          <span class="reading-time">{formatReadingTime(post.readingTime)}</span>
          {post.data.category && (
            <span class="post-category">{post.data.category}</span>
          )}
        </div>
        <h2>
          <a href={`/blog/${post.slug}`}>{post.data.title}</a>
        </h2>
        <p class="post-excerpt">{post.data.description}</p>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="post-tags">
            {post.data.tags.slice(0, 3).map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
        <a href={`/blog/${post.slug}`} class="read-more">Read more ‚Üí</a>
      </article>
    ))}
  </div>
  
  {sortedPosts.length === 0 && (
    <div class="no-posts reveal">
      <div class="empty-icon">üìù</div>
      <p>No posts yet. Check back soon!</p>
      <p class="empty-sub">In the meantime, <a href="/contact">let's talk</a> about your financial infrastructure.</p>
    </div>
  )}
</section>

</Layout>

<style>
  .hero-mini {
    padding: 10rem 3rem 5rem;
    position: relative;
    overflow: hidden;
  }

  .hero-grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(30, 30, 42, 0.3) 1px, transparent 1px),
      linear-gradient(90deg, rgba(30, 30, 42, 0.3) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 70% 60% at 50% 30%, black 20%, transparent 70%);
  }

  .hero-content {
    max-width: 800px;
    position: relative;
    z-index: 2;
  }

  .hero-tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
    letter-spacing: 0.08em;
    margin-bottom: 1.5rem;
  }

  .hero-mini h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }

  .accent { color: var(--accent); }

  .hero-desc {
    font-size: 1.15rem;
    color: var(--text-muted);
    max-width: 540px;
    line-height: 1.7;
  }

  .rss-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: var(--text-muted);
    transition: color 0.2s;
  }

  .rss-link:hover {
    color: var(--accent);
  }

  .rss-link svg {
    opacity: 0.7;
  }

  .rss-link:hover svg {
    opacity: 1;
  }

  /* Posts grid */
  .posts-grid {
    display: grid;
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .post-card {
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.4s;
  }

  .post-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.3);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .post-category {
    color: var(--cyan);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .reading-time {
    color: var(--text-muted);
  }

  .post-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-card h2 a {
    color: var(--text);
    transition: color 0.3s;
  }

  .post-card h2 a:hover {
    color: var(--accent);
  }

  .post-excerpt {
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6rem;
    padding: 0.3rem 0.6rem;
    background: var(--accent-dim);
    border: 1px solid rgba(0, 229, 160, 0.15);
    border-radius: 4px;
    color: var(--accent);
    letter-spacing: 0.02em;
  }

  .read-more {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--accent);
    transition: opacity 0.3s;
  }

  .read-more:hover {
    opacity: 0.8;
  }

  /* No posts */
  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .empty-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .no-posts p {
    color: var(--text-muted);
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
  }

  .empty-sub {
    font-size: 0.95rem;
  }

  .empty-sub a {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .hero-mini { padding: 8rem 1.5rem 3rem; }
    .post-card { padding: 1.5rem; }
    .post-card h2 { font-size: 1.25rem; }
  }
</style>
