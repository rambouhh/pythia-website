---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Message Sent" description="Thank you for contacting Pythia Insights">
  <section class="success-page">
    <div class="container">
      <div class="success-content">
        <div class="success-icon">âœ“</div>
        <h1>Message Received</h1>
        <p>Thank you for reaching out. We've received your message and will get back to you within one business day.</p>
        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .success-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 180px 0 100px;
  }

  .success-content {
    text-align: center;
    max-width: 500px;
  }

  .success-icon {
    width: 80px;
    height: 80px;
    background: var(--accent);
    color: var(--bg-dark);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0 auto 32px;
  }

  .success-content h1 {
    color: var(--primary);
    margin-bottom: 16px;
  }

  .success-content p {
    color: var(--text-light);
    font-size: 1.125rem;
    margin-bottom: 32px;
  }
</style>
